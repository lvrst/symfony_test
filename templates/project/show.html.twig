{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ project.deadline ? project.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ project.budget }}</td>
            </tr>
            <tr>
                <th>Client(s)</th>
                <td>
                    <ul>
                        {% for client in project.clients %}
                        <li>
                            {{ client.firstName }} {{ client.lastName }}
                        </li>
                        {% endfor %}
                    </ul>
                    
                </td>
            </tr>
            <tr>
                <th>Student(s)</th>
                <td>
                    <ul>
                        {% for student in project.students %}
                        <li>
                            {{ student.firstName }} {{ student.lastName }}
                        </li>
                        {% endfor %}
                    </ul>
                    
                </td>
            </tr>
            <tr>
                <th>Teacher</th>
                <td>{{ project.teacher.firstName }} {{ project.teacher.lastName }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
